          ))}
        </div>

        {/* Testimonials Section */}
        <h2 className="text-3xl font-bold mt-16 mb-8 text-black">What Our Users Say</h2>
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
          {[...Array(4)].map((_, index) => (
            <motion.div
              key={index}
